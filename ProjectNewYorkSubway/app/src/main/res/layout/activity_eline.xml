<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityELine"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/rGroupE">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CLICK_FOR_FUN_FACT"
                android:id= "@+id/radioButtonE"
                />
        </RadioGroup>
        <ImageView
            android:id="@+id/eLinePhotoOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e1" />
        <ImageView
            android:id="@+id/eLinePhotoTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e2" />
        <ImageView
            android:id="@+id/eLinePhotoThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e3" />
        <ImageView
            android:id="@+id/eLinePhotoFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e4" />
        <ImageView
            android:id="@+id/eLinePhotoFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e5" />
        <ImageView
            android:id="@+id/eLinePhotoSix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e6" />
        <ImageView
            android:id="@+id/eLinePhotoSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e7" />
        <ImageView
            android:id="@+id/eLinePhotoEight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/e_line_picture"
            android:src="@drawable/e8" />
    </LinearLayout>

</ScrollView>